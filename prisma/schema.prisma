generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Post {
  id        String   @id @default(cuid())
  slug      String   @unique
  title     String
  content   String
  category  String
  date      DateTime
  author    String
  tags      String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Menu {
  id          String   @id @default(cuid())
  name        String
  description String
  price       Int
  category    String
  isPopular   Boolean  @default(false)
  isNew       Boolean  @default(false)
  allergens   String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Estimate {
  id        String   @id @default(cuid())
  company   String
  name      String
  email     String
  phone     String
  service   String
  budget    String?
  date      String?
  message   String
  status    String   @default("pending")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
